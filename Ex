PROGRAM 2

<?php
function gcd($a, $b) {
    while($b != 0) {
        $temp = $b;
        $b = $a % $b;
        $a = $temp;
    }
    return $a;
}

$num1 = 24;
$num2 = 36;

echo "GCD of $num1 and $num2 is: " . gcd($num1, $num2);
?>


PROGRAM 3


<?php
$numbers = array(10, 45, 78, 23, 5, 67, 90, 12, 32, 50);

$maxValue = max($numbers);
$minValue = min($numbers);

echo "Maximum Value: $maxValue <br>";
echo "Minimum Value: $minValue";
?>



PROGRAM  4

<?php
// Sample string
$str = "Hello PHP World";

// String length
echo "Original String: $str<br>";
echo "Length of string: " . strlen($str) . "<br>";

// Reverse string
echo "Reversed string: " . strrev($str) . "<br>";

// Convert to uppercase
echo "Uppercase: " . strtoupper($str) . "<br>";

// Convert to lowercase
echo "Lowercase: " . strtolower($str) . "<br>";

// Extract a substring
echo "Substring (0,5): " . substr($str, 0, 5) . "<br>";

// Find position of 'PHP'
echo "Position of 'PHP': " . strpos($str, "PHP") . "<br>";
?>


PROGRAM 5

<?php
    // Demonstration of While Loop
    echo "<h3>While Loop</h3>";
    $i = 1;
    while ($i <= 5) {
        echo "Number: $i <br>";
        $i++;
    }

    // Demonstration of Do-While Loop
    echo "<h3>Do-While Loop</h3>";
    $j = 1;
    do {
        echo "Number: $j <br>";
        $j++;
    } while ($j <= 5);
?>


PROGRAM - 6

<?php
try {
    $filename = "data.txt";

    if (!file_exists($filename)) {
        throw new Exception("File not found");
    }

    echo "File opened successfully";
}
catch (Exception $e) {
    echo "Error: " . $e->getMessage();
}
?>


PROGRAM - 7

<!DOCTYPE html>
<html>
<head>
    <title>Age Calculator</title>
</head>
<body>

<h2>Age Calculator</h2>

<form method="post">
    Enter Date of Birth:
    <input type="date" name="dob" required>
    <br><br>
    <input type="submit" name="submit" value="Calculate Age">
</form>

<?php
if (isset($_POST['submit'])) {
    $dob = $_POST['dob'];
    $dobDate = new DateTime($dob);
    $today = new DateTime(date("Y-m-d"));
    $age = $today->diff($dobDate);

    echo "<h3>Your Age is: " . $age->y . " years</h3>";
}
?>
</body>
</html>


PROGRAM - 8

<?php
$file = "sample.txt";

if (file_exists($file)) {
    header('Content-Description: File Transfer');
    header('Content-Type: application/octet-stream');
    header('Content-Disposition: attachment; filename="' . basename($file) . '"');
    header('Content-Length: ' . filesize($file));
    readfile($file);
    exit;
} else {
    echo "File not found!";
}
?>


PROGRAM - 9

<!DOCTYPE html>
<html>
<head>
    <title>Program 9 - File Handling</title>
</head>
<body>
    <h2>Add and Display Names</h2>

    <form method="post">
        Enter Name: <input type="text" name="username" required>
        <input type="submit" name="submit" value="Add Name">
    </form>

    <hr>

    <?php
    $filename = "names.txt";

    // If form is submitted
    if (isset($_POST['submit'])) {
        $name = $_POST['username'];

        // Open file in append mode
        $file = fopen($filename, "a");
        fwrite($file, $name . "\n");
        fclose($file);

        echo "<p><b>Name added successfully!</b></p>";
    }

    // Display all names
    if (file_exists($filename)) {
        echo "<h3>List of Names:</h3>";
        $file = fopen($filename, "r");
        while (!feof($file)) {
            echo fgets($file) . "<br>";
        }
        fclose($file);
    }
    ?>

</body>
</html>


